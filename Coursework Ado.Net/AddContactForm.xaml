<Window x:Class="Coursework_Ado.Net.AddContactForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddContactForm" Height="200" Width="600" AllowsTransparency="True" WindowStyle="None" MouseDown="Window_MouseDown_1"> 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="279*"/>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" FontSize="20"  Height="26" >Название контакта</TextBlock>
        <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" FontSize="20" Height="26">Контакт</TextBlock>
        <TextBox Grid.Column="1" FontSize="20" x:Name="XContactName"  Padding="0 18">nnnn</TextBox>
        <TextBox Grid.Column="1" Grid.Row="1" x:Name="XContactValue"  Padding="0 18" FontSize="20"></TextBox>
        <Button Grid.Column="1" Grid.Row="2" FontSize="20" Click="Button_Click_1">Добавить</Button>
        <Button Grid.Column="0" Grid.Row="2" FontSize="20" Click="Button_Click_2">Отменить</Button>
    </Grid>
</Window>

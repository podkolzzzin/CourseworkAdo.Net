<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Coursework_Ado.Net.AddContactItem"
	x:Name="UserControl"
	d:DesignWidth="600" d:DesignHeight="50">

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.5*"/>
			<ColumnDefinition Width="0.05*"/>
			<ColumnDefinition Width="0.5*"/>
		</Grid.ColumnDefinitions>
        <TextBox x:Name="XContactName" TextWrapping="Wrap"  Padding="0 6" FontSize="24" />
		<TextBox x:Name="XContactValue" Grid.Column="2"    Padding="0 6"  FontSize="24" />
	</Grid>
</UserControl>
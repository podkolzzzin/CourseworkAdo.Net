<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Coursework_Ado.Net.FileSelect"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="50">

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.3*"/>
			<ColumnDefinition Width="0.7*"/>
		</Grid.ColumnDefinitions>
        <TextBlock MinWidth="180" FontSize="18"  x:Name="XName"></TextBlock>
		<Button MinWidth="120" FontSize="18" Grid.Column="1" Click="Button_Click_1">
			<TextBlock HorizontalAlignment="Left" x:Name="XFilePath" Grid.ColumnSpan="2">Выберите файл:</TextBlock>
		</Button>
	</Grid>
</UserControl>
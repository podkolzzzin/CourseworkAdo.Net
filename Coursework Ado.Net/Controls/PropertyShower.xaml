<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Coursework_Ado.Net.PropertyShower"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="50">

	<Grid x:Name="LayoutRoot">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.3*"/>
			<ColumnDefinition Width="0.7*"/>
		</Grid.ColumnDefinitions>
		<TextBlock MinWidth="180" x:Name="XPropertyName" FontSize="18"></TextBlock>
        <TextBox KeyDown="XPropertyValue_KeyDown_1" FontSize="18" MinWidth="120" x:Name="XPropertyValue" IsReadOnly="True" BorderThickness="0" Background="Transparent" Grid.Column="1"></TextBox>
	</Grid>
</UserControl>